<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.CortePage"
             Title="Cadastro do Corte">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Cadastro do Corte" FontSize="Large" HorizontalOptions="Center" />
            <Label Text="Nome do Cliente:" />
            <Picker x:Name="ClientePicker" />
            <Label Text="Produto:" />
            <Picker x:Name="ProdutoPicker" />
            <Entry x:Name="ProdutoEntry" Placeholder="Produto" />

            <Label Text="Quantidade:" />
            <Entry x:Name="QuantidadeEntry" Keyboard="Numeric" Placeholder="Quantidade" />

            <Label Text="Entrada:" />
            <Entry x:Name="EntradaEntry" Placeholder="Entrada" />

            <Label Text="Prazo:" />
            <Entry x:Name="PrazoEntry" Placeholder="Prazo" />

            <Button Text="Cadastrar" Clicked="OnCadastrarClicked" BackgroundColor="LightBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
