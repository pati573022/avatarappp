<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="avatarapp.TelaEntrarPage   "
             Shell.NavBarIsVisible= "False">


    <ScrollView>
        <StackLayout VerticalOptions="CenterAndExpand"
                     HorizontalOptions="CenterAndExpand"
                     Padding="20"
                     Spacing="20">
            
            <Label Text="ENTRAR" 
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <Button Text="CLIENTE"
            Clicked= "Volta"/>
            <Button Text="FORNECEDOR"
            Clicked="FornecedorClicked"/>
            <Button Text="PEDIDO"/>
            <Button Text="PRODUTO"/>
            <Button Text="MATERIA PRIMA"
            Clicked= "MateriaPrimaClicked"/>
            <Button Text="UNIDADE"/>
            <Button Text="CORTE"/>
            <Button Text="COSTURA"/>
            <Button Text="BORDADO"/>
            <Button Text="ESTOQUE"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
